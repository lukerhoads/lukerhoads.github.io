---
const projects = [
  {
    id: 'project-01',
    title: 'Surfboard',
    category: 'Composites',
    image: '/images/surfboard/Cover.png',
    slug: 'surfboard'
  },
  {
    id: 'project-02',
    title: 'FSAE Drivetrain',
    category: 'FSAE',
    image: '/images/fsae-drivetrain/Cover.png',
    slug: 'fsae-drivetrain'
  }
];
---

<div class="project-grid">
  {projects.map((project) => (
    <a href={`/projects/${project.slug}`} class="project-card">
      <div class="project-image">
        <img src={project.image} alt={project.title} loading="lazy" />
        <div class="project-overlay">
          <div class="project-info">
            <h3 class="project-title">{project.title}</h3>
          </div>
        </div>
      </div>
    </a>
  ))}
</div>

<style>
  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 0;
    padding: 0;
    max-width: 1400px;
    margin: 0 auto;
  }

  .project-card {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-5px);
  }

  .project-image {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
    background: #f8f9fa;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    padding: 3rem 2rem 2rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .project-info {
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.01em;
  }

  .project-category {
    font-size: 0.9rem;
    opacity: 0.9;
    margin: 0;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .project-grid {
      grid-template-columns: 1fr;
      gap: 0;
      padding: 0;
    }

    .project-overlay {
      opacity: 1;
      background: linear-gradient(transparent, rgba(0, 0, 0, 0.5));
    }
  }
</style>