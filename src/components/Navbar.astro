<nav class="navbar">
  <div class="nav-container">
    <a href="/" class="nav-logo">Luke Rhoads</a>
    <div class="nav-links">
      <a href="/contact" class="nav-link">Contact</a>
    </div>
  </div>
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    z-index: 1000;
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo {
    font-size: 1.5rem;
    font-weight: 600;
    color: #111;
    text-decoration: none;
    letter-spacing: -0.02em;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-link {
    color: #666;
    text-decoration: none;
    font-weight: 400;
    font-size: 0.95rem;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: #111;
  }

  @media (max-width: 768px) {
    .nav-links {
      gap: 1.5rem;
    }

    .nav-link {
      font-size: 0.9rem;
    }
  }
</style>