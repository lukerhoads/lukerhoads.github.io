---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={`${frontmatter.title} - ${frontmatter.category} project from ${frontmatter.year}`}>
  <article class="project-article">
    <div class="project-header">
      <div class="container">
        <div class="project-meta">
          <a href="/" class="back-link">‚Üê Back</a>
          <div class="meta-info">
            <span class="category">{frontmatter.category}</span>
            <span class="year">{frontmatter.year}</span>
          </div>
        </div>
      </div>
    </div>

    <div class="project-hero">
      <div class="container">
        <div class="hero-image">
          <img src={frontmatter.image} alt={frontmatter.title} />
        </div>
      </div>
    </div>

    <div class="project-content">
      <div class="container">
        <div class="content-wrapper">
          <slot />
        </div>
      </div>
    </div>
  </article>
</Layout>

<style is:global>
  .project-article {
    padding-bottom: 4rem;
  }

  .project-header {
    padding: 2rem 1rem;
    background: #f8f9fa;
  }

  .project-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .back-link {
    color: #666;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: #111;
  }

  .meta-info {
    display: flex;
    gap: 1rem;
    font-size: 0.9rem;
  }

  .category {
    color: #2563eb;
    font-weight: 500;
  }

  .year {
    color: #666;
  }

  .project-hero {
    padding: 0 0;
  }

  .hero-image {
    aspect-ratio: 16/9;
    overflow: hidden;
    background: #f8f9fa;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-content {
    padding: 3rem 1rem;
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  .content-wrapper h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: #111;
  }

  .content-wrapper h2 {
    font-size: 1.5rem;
    margin: 3rem 0 1rem;
    color: #111;
  }

  .content-wrapper h3 {
    font-size: 1.25rem;
    margin: 2rem 0 1rem;
    color: #333;
  }

  .content-wrapper p {
    margin-bottom: 1.5rem;
    color: #444;
    line-height: 1.8;
  }

  .content-wrapper ul {
    margin-bottom: 1.5rem;
    color: #444;
  }

  .content-wrapper li {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .content-wrapper p:has(em) {
    text-align: center;
  }

  @media (max-width: 768px) {
    .project-meta {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .content-wrapper h1 {
      font-size: 2rem;
    }

    .content-wrapper h2 {
      font-size: 1.25rem;
    }

    .project-content {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
  }
</style>